#!/usr/bin/env php
<?php
require_once __DIR__."/bootstrap.php";
$argv = $_SERVER['argv'] ?? [];
//默认启动HTTP服务
$arg = $argv[1] ?? "http.start";
$arg = in_array($arg, ["http.start", "ws.start"]) ? $arg : "http.start";
//又或者启动websocket服务
if($arg == 'ws.start'){
    //启动websocket
    App::init(true, true)->start();
}else{
    //启动http
    App::init(true)->start();
}